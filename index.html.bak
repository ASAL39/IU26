.memoriam-quote {
  border: 1px solid rgba(255,255,255,0.12);
  border-radius: 20px;
  padding: 4rem;
  color: rgba(255,255,255,0.85);
  font-style: italic;
  line-height: 2;
  font-size: 1.15rem;
  position: relative;
  background: rgba(255,255,255,0.02);
}
.memoriam-quote::before {
  content: '"';
  font-family: 'Playfair Display', serif;
  font-size: 7rem;
  color: rgba(201,168,76,0.15);
  position: absolute;
  top: -1rem; left: 2rem;
}

/* ‚ïê‚ïê FOOTER ‚ïê‚ïê */
footer {
  background: #050b12;
  color: rgba(255,255,255,0.4);
