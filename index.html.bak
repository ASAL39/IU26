.countdown-unit {
  font-size: 0.7rem;
  letter-spacing: 0.2em;
  text-transform: uppercase;
  color: var(--gold);
  margin-top: 1rem;
}
.countdown-colon {
  font-family: 'Space Mono', monospace;
  font-size: clamp(2rem, 5vw, 3.5rem);
  color: var(--gold);
  opacity: 0.5;
  animation: blink 1s step-end infinite;
